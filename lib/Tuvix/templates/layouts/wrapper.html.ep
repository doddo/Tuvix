<!DOCTYPE html>
<html>
<head>
    <title><%== $title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="/posts?feed=rss" rel="alternate" title="<%= site_info->title %>" type="application/atom+xml">
    <link rel="profile" href="http://microformats.org/profile/hcard">
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" >
    <link rel="webmention" href="<%= webmention_url->to_abs %>" />
    <style>
        img {
            border: 0;
            max-width: 100%;
        }
        .page-header h1 :link, .page-header h1 :visited {
            color: black;
        }
        .sidebar h1 {
            font-size: 1.5em;
        }
        img.author-link {
            width: 20px;
        }
        .sidebar section {
            margin-top: 2em;
        }

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-light" style="background-color: #e3f2fd;" role="navigation">
        <div class="container">

            <a class="navbar-brand" href="/"><%== site_info->title %></a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                &#x2630;
            </button>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    % while (my $page = $pages->next) {
                    <li class="nav-item"><a href="<%= $page->path %>" class="nav-link"><%= $page->title %></a></li>
                    %}
                    <li class="nav-item"><a href="/posts/archive" class="nav-link">Archive</a></li>
                    <li class="nav-item"><a href="/posts?feed=rss" class="nav-link">RSS</a></li>
                </ul>
            </div>

            <!--/.navbar-collapse -->
        </div>
    </nav>

    <div class="container">

        <div class="row">

            <div class="col-md-9">
                <%= content  %>
            </div>

            <div class="col-md-3 sidebar">
                <section>
                <%== site_info->sidebar_section %>
                </section>
                <section>
                    <h1>Search</h1>
                    <form action="/posts/search" method="post">
                    <input name="q" type="text" placeholder="Search this blog" />
                    <input type="submit" value="Go" />
                    </form>
                </section>
                <section class="d-none d-lg-block">
                    <h1>Recent Posts</h1>
                    <ul>
                    % foreach my $post  (recent_posts->all) {
                        <li><a href="<%= $post->uri %>"><%= $post->title %></a></li>
                    % }
                    </ul>
                </section>
            </div>

        </div>

        <footer style="font-size:small; font-style:italic" class="container">
        <hr />
        <%== site_info->footer_section %>
        </footer>
    </div>

    <script type="text/javascript" src="https://code.jquery.com/jquery.js"></script>
    <script type="text/javascript" src="https://netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
    </body>
</html>

