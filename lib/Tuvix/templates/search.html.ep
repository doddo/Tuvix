% layout 'wrapper';
<div class="page-header">
<h1>Search</h1>
</div>
<div id="search">
% if ($query) {
    <h2>Results for "<%= $query %>"</h2>
    Found <%= $posts->count %> posts
% if ($posts){
    <ul>
    % while (my $post = $posts->next) {
        <li><a href="<%= $post->uri %>"><%= $post->title %></a></li>
    %}
    </ul>
%}

%} else {
    Please input a query in the search box.
%}
</div>
